{
	"name": "${projectName}",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
	     "classnames": "^2.2.6",
		"react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.0.3",
		"react-router": "^4.3.1",
		"react-router-dom": "^4.3.1",
		"react-scripts": "3.0.1",
		"primeicons": "^1.0.0",
        "primereact": "^3.1.4",
		"redux": "^4.0.1",
		"redux-thunk": "^2.3.0"		
	},
    "devDependencies": {
        "body-parser": "^1.18.3",
        "concurrently": "^4.1.0",
        "cors": "^2.8.5",
        "json-query": "^2.2.2",
        "react-test-renderer": "^16.8.6",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.8.0"
    },
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"coverage": "react-scripts test --env=jsdom --coverage",
		"startMock" : "node ./mocks/server.js",
        "standalone": "concurrently \"yarn startMock\" \"yarn start\""
	},
	"proxy": "http://localhost:8000/${projectName}",
	"eslintConfig":{"extends":"react-app"},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
    "jest": {
        "collectCoverageFrom": [
            "src/actions/*.js",
            "src/components/*.js",
            "src/containers/*.js",
            "src/reducers/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "lines": 50
            }
        }
    }
}
